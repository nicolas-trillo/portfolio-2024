<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Public+Sans:ital,wght@0,100..900;1,100..900&display=swap');
    :root {
        --bg-color: rgb(242, 242, 247);
        --text-color: rgb(28, 28, 30);
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );
    }
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        overflow-x: hidden;
    }
    html {
        font-family: "Public Sans", sans-serif;
        background: var(--bg-color);
    }
    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    code {
        font-family: "IBM Plex Sans Condensed", monospace;
        font-weight: 400;
    }
    h4,
    h5,
    h6 {
        font-weight: 400;
    }
    .small {
        font-size: small;
    }
    main {
        height: 100dvh;
        overflow-y: scroll;
        scroll-snap-type: y mandatory;
        padding: 0px 0px;
        color: var(--text-color);
        font-size: 20px;
        line-height: 1.5;
    }
    nav {
        display: flex;
        gap: 10px;
        padding: 0;
    }
    nav a {
        color: var(--text-color);
        font-size: 15px;
    }
    section {
        margin: auto;
        width: 100%;
        max-width: 700px;
        height: 100dvh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        scroll-snap-align: center;
    } section > * {
        padding: 0 20px;

    }
    button,
    .btn {
        font-family: "IBM Plex Sans Condensed", monospace;
        cursor: pointer;
        border: 1px solid #007aff;
        text-align: left;
        padding: 5px 60px 5px 12px;
        line-height: 1;
        font-weight: 400;
        width: fit-content;
        background-color: #007aff;
        color: var(--bg-color);
        transition: all 0.2s cubic-bezier(0,0,.38,.9);
    }
    a.btn {
        text-decoration: none;
    }
    button:hover,
    .btn:hover {
        color: #007aff;
        background-color: var(--bg-color);
    }
    a {
        color: #007aff;
    }
    .material-symbols-outlined {
        font-variation-settings:
            "FILL" 0,
            "wght" 400,
            "GRAD" 0,
            "opsz" 24;
    }
    .centered-text {
        text-align: center;
    }
    .monospace {
        font-family: "IBM Plex Sans Condensed", monospace;
    }
    .half-opacity {
        opacity: 0.5;
    }
    .color-txt {
        color: var(--text-color);
    }
</style>
